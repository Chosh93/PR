{
  "extends": "@pr/eslint-config/typescript-react.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "#/*": ["./src/*"],
      "#api/*": ["../api/src/*"],
      "#services/*": ["../services/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
