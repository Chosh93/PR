{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "local:desktop": {
      "dependsOn": [
        "barrels",
        "lint"
      ],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "barrels": {
      "outputs": [],
      "dependsOn": [
        "^barrels"
      ]
    }
  }
}
